datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
} 

generator client { // <-- La línea de inicio del generator
  provider = "prisma-client-js"
} 


enum Role { 
  STUDENT 
  ADMIN 
}
enum OrderStatus { 
  PENDING 
  PAID 
  REJECTED 
  CANCELLED 
}
enum OrderSource { 
  SITE 
  MANUAL 
  EXTERNAL 
}
enum PaymentMethod { 
  TRANSFER 
  MERCADOPAGO 
  USDT 
  SKRILL      // Nuevo
  AIRTM       // Nuevo
  PREX        // Nuevo
  TIPFUNDER   // Nuevo
}
enum PaymentStatus { 
  PENDING_REVIEW 
  CONFIRMED 
  FAILED 
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String?
  
  // --- CAMPOS AGREGADOS ---
  name          String
  lastname      String
  age           Int?        // Int opcional (usa Int? para permitir nulo)
  telegram      String?     // String opcional
  masters       String[]    // Array de Strings (requiere PostgreSQL)
  // ------------------------

  role          Role      @default(STUDENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  orders        Order[]
}

model Course {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  shortDesc String
  price       Float    // Este será tu precio en ARS
  priceUsd    Float    @default(0) // Nuevo precio en USD (le pongo default 0 para que no falle la creación)
  currency  String   // "ARS" | "USD"
isActive  Boolean  @default(true) 
isComingSoon Boolean @default(false) 
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
orders    Order[]
features   String[]  // <--- Nuevo campo: Lista de beneficios para la tarjeta (card)

  longDescription String?  @db.Text // Texto largo
  learningPoints  String[] // Array de strings para "Lo que aprenderás"
}

model Order {
  id         String      @id @default(cuid())
  userId     String?
  user       User?       @relation(fields: [userId], references: [id])
  buyerName  String
  buyerEmail String
  courseId   String
  course     Course      @relation(fields: [courseId], references: [id])
  status     OrderStatus @default(PENDING)
  source     OrderSource @default(SITE)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  payments   Payment[]
  notes      String?
}

model Payment {
  id        String        @id @default(cuid())
  orderId   String
  order     Order         @relation(fields: [orderId], references: [id])
  method    PaymentMethod
  amount    Float         // <--- CAMBIADO DE Int A Float
  currency  String
  status    PaymentStatus @default(PENDING_REVIEW)
  providerId String?
  receiptUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
